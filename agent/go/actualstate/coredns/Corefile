.:{$PORT} {
    log
    errors
    acl {
        allow 10.0.0.0/8
        allow 172.16.0.0/12
        allow 192.168.0.0/16
        allow 127.0.0.0/8
        block all
    }
    kubernetes cluster.local in-addr.arpa ip6.arpa {
        endpoint {$K8S_ENDPOINT}
        tls {$TLS_CERT} {$TLS_KEY} {$TLS_CA}
        kubeconfig {$KUBECONFIG}
        pods verified
        fallthrough
    }
    hosts {
        fallthrough
    }
    forward . /etc/resolv.conf
    cache 30
    loop
    reload
    loadbalance
}